@using System;
@using Epam.Task7.Users.BLL.Interface;
@using Epam.Task7.Users.Common;
@using Epam.Task7.Users.Entities;
@if (IsPost)
{
    var userAdminLogic = DependencyResolver.UserAdminLogic;
    string log = Request.Params["userLog"] ?? string.Empty;
    string pas = Request.Params["userPas"] ?? string.Empty;
    int.TryParse(Request.Params["userRole"], out int fieldId);

    if (!log.Equals("") && !pas.Equals(""))
    {
        var userAdmin = new UserAdmin
        {
            Login = log,
            Pass = pas,
            AdminOrUser = fieldId,
        };
        userAdminLogic.AddUserAdmin(userAdmin);

    }

    Response.Redirect("~/AllUserAdmin");
}
